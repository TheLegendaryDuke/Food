<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/welcomeLoginDialog"
    android:padding="20dp"
    android:background="@color/darkWhite">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_rectangle_light_orange"
        android:hint="Your email goes here"
        android:textStyle="bold"
        android:id="@+id/loginEmail"
        android:textColorHint="@color/darkOrange"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_rectangle_light_orange"
        android:textStyle="bold"
        android:inputType="textPassword"
        android:hint="Enter your password"
        android:id="@+id/loginPassword"
        android:layout_marginTop="10dp"
        android:textColorHint="@color/darkOrange"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/loginRemember"/>

        <itsjustaaron.food.Utilities.PrettyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remember Me"
            android:textColor="@color/darkOrange"
            android:textStyle="bold"
            android:layout_marginTop="2dp"
            android:textSize="18sp"/>

    </LinearLayout>

    <itsjustaaron.food.Utilities.PrettyTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/red"
        android:layout_marginTop="30dp"
        android:id="@+id/loginError"
        android:text="Error"
        android:visibility="invisible"
        android:layout_marginStart="10dp"
        android:textSize="20sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ripple_effect_orange"
            android:text="CANCEL"
            android:layout_weight="1"
            android:textSize="25sp"
            android:layout_marginEnd="10dp"
            android:id="@+id/welcomeDialogLoginCancel"
            android:textColor="#ffffff"
            android:padding="10dp"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ripple_effect_orange"
            android:text="LOGIN"
            android:textSize="25sp"
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            android:textColor="#ffffff"
            android:id="@+id/welcomeDialogLogin"
            android:padding="10dp"/>
    </LinearLayout>

</LinearLayout>