<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:padding="5dp"
    android:layout_height="100dp">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/offerFoodImage"
        android:layout_marginRight="5dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <itsjustaaron.food.Utilities.PrettyTextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:id="@+id/offerFoodPrice"
            android:text="$5.00"
            android:textSize="30sp"
            android:textStyle="bold"
            android:gravity="center"/>

        <itsjustaaron.food.Utilities.PrettyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@id/offerFoodPrice"
            android:id="@+id/offerFoodExpire"
            android:text="1990/01/01"
            android:maxLines="1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/offerFoodPrice"
            android:orientation="vertical"
            android:layout_above="@id/offerFoodExpire">
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:id="@+id/offerOffererImage"
                        android:src="@mipmap/mystery"/>

                    <itsjustaaron.food.Utilities.PrettyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/offerFoodOfferer"
                        android:layout_gravity="center"
                        android:text="John Doe"
                        android:textStyle="bold"
                        android:textSize="25sp"
                        android:maxLines="1" />
                </LinearLayout>
            </HorizontalScrollView>
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <itsjustaaron.food.Utilities.PrettyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="offers"
                        android:textSize="10sp"
                        android:textColor="@color/colorAccent"/>
                    <itsjustaaron.food.Utilities.PrettyTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/offerFoodName"
                        android:text="Hambaobao"
                        android:textSize="17sp"
                        android:layout_marginLeft="10dp"
                        android:maxLines="1" />

                </LinearLayout>
            </HorizontalScrollView>
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                <itsjustaaron.food.Utilities.PrettyTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="in"
                    android:textSize="10sp"
                    android:textColor="@color/colorAccent"/>
            <itsjustaaron.food.Utilities.PrettyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/offerFoodCity"
                android:text="Harbin"
                android:textSize="17sp"
                android:layout_marginLeft="10dp"
                android:maxLines="1"
                android:textAlignment="center"/>
                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>