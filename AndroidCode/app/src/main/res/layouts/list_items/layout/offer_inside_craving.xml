<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="191dp"
    android:layout_height="309dp"
    android:padding="10dp"
    android:orientation="vertical"
    android:gravity="center_vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/firstCard"
        android:gravity="center"
        android:background="@drawable/blank_card"
        android:visibility="gone"
        android:orientation="vertical">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/ic_add_circle"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="I can make this!"/>

    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/offer_card"
            android:padding="10dp"
            android:id="@+id/normalCase">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/userIcon"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"/>
            <itsjustaaron.food.Utilities.PrettyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/userName"
                android:layout_toRightOf="@id/userIcon"/>
            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/foodImage"
                android:layout_below="@id/userIcon"/>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_below="@id/foodImage"
                android:layout_marginBottom="10dp"
                android:id="@+id/tempID1"
                android:src="@mipmap/price_logo_white"/>
            <itsjustaaron.food.Utilities.PrettyTextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:gravity="center"
                android:id="@+id/price"
                android:textSize="30sp"
                android:textColor="#000000"
                android:layout_toRightOf="@id/tempID1"
                android:layout_below="@id/foodImage"/>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_below="@id/tempID1"
                android:id="@+id/tempID2"
                android:src="@mipmap/location_logo_white"/>
            <itsjustaaron.food.Utilities.PrettyTextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:gravity="center"
                android:textSize="30sp"
                android:id="@+id/location"
                android:textColor="#000000"
                android:layout_toRightOf="@id/tempID2"
                android:layout_below="@id/tempID1"/>
        </RelativeLayout>

    </ScrollView>

</LinearLayout>