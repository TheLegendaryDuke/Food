<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="itsjustaaron.food.FoodShopActivities.FoodShopWelcome">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome~"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"/>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textAlignment="center"
                android:text="Before you proceed, tell us a little about yourself\n (your experience as a chef, your reputation among family and friends, etc)" />
            <EditText
                android:layout_width="match_parent"
                android:id="@+id/offererDescription"
                android:layout_height="200dp"
                android:layout_margin="10dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Please select one or more categories of food you are good at"/>
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/tagContainer"
                        android:orientation="vertical"
                        android:gravity="right">

                        <itsjustaaron.food.Utilities.PrettyTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Please check all the tags that apply:"
                            android:textStyle="bold"
                            android:textAlignment="center"
                            android:textSize="15sp"/>

                    </LinearLayout>
                </ScrollView>
            </LinearLayout>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DONE"
                android:onClick="click"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
