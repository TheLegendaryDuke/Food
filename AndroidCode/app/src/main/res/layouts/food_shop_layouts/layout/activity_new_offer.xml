                android:layout_marginEnd="15dp"
                android:text="name"
                android:id="@+id/newOfferFoodName"
                android:textAlignment="center"
                android:gravity="center"
                android:textSize="30sp"
                android:textColor="#ffffff"/>
        </android.support.v7.widget.Toolbar>


